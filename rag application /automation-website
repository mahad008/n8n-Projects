  <script>
    /* Basic interactivity + accessible behaviors */

    // footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Contact form handler (demo)
    function handleContact(e){
      e.preventDefault();
      const form = e.target;
      const name = form.name.value.trim();
      const email = form.email.value.trim();
      const desc = form.desc.value.trim();
      if(!name||!email||!desc) return alert('Please fill all fields');
      // In real app: POST to API
      alert('Thanks, '+name+'. We received your request and will follow up via ' + email + '.');
      form.reset();
      window.scrollTo({top:0,behavior:'smooth'});
    }

    // Placeholder function for openChat (since chat is removed)
    function openChat(){
      // Chat functionality has been removed
      alert('Chat functionality has been removed. Please use the contact form instead.');
    }
  </script>
