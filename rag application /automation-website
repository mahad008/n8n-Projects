<script type="module">
	import { createChat } from 'https://cdn.jsdelivr.net/npm/@n8n/chat/dist/chat.bundle.es.js';

	createChat({
    webhookUrl: 'https://n8n.srv940619.hstgr.cloud/webhook/af19a6c0-f2da-45f9-abea-3ae23f48df20/chat',
    webhookConfig: {
        method: 'POST',
        headers: {}
    },
    target: '#n8n-chat',
    mode: 'window', // Options: 'window', 'fullscreen', 'embedded'
    
    // Chat appearance
    theme: {
        primaryColor: '#d2d4d9', // Your brand primary color
        textColor: '#0f1724',
        backgroundColor: '#ffffff',
        borderRadius: '0px'
    },
    
    // Window positioning and size
    initialWidth: 400,
    initialHeight: 600,
    position: 'bottom-right', // Options: 'bottom-right', 'bottom-left', 'top-right', 'top-left'
    
    // Chat behavior
    chatInputKey: 'chatInput',
    chatSessionKey: 'sessionId',
    loadPreviousSession: true,
    metadata: {},
    showWelcomeScreen: true,
    defaultLanguage: 'en',
    
    // Custom messages
    initialMessages: [
        'Hi there! ðŸ‘‹',
        'I\'m here to help with your automation questions.',
        'What would you like to know about n8n workflows?'
    ],
    
    // Internationalization
    i18n: {
        en: {
            title: 'M AUTOMATION Support',
            subtitle: 'GET INSTANT HELP WITH YOUR AUTOMATION NEEDS',
            footer: 'Powered by M ATOMATION',
            getStarted: 'Start Chat',
            inputPlaceholder: 'Ask about workflows, integrations...',
            sendButtonText: 'Send',
            closeButtonText: 'Close Chat'
        },
    },
    
    enableStreaming: false,
    
    // Custom CSS classes (if supported)
    customClasses: {
        container: 'custom-chat-container',
        header: 'custom-chat-header',
        messages: 'custom-chat-messages',
        input: 'custom-chat-input'
    }
});


